<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_mode_black"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_mode_black"
        android:paddingBottom="40sp"
        tools:context=".InterviewPrep">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome!"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="330dp"
            android:layout_height="38dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Let’s start your interview, please enter your information"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:lineSpacingExtra="1dp"
            android:text="Please describe your experiences  ( Including years of experience,  tools used, and so on ) ( Note: can also be used as a LinkedIn profile  intro )"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="308dp"
            android:layout_height="39dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:lineSpacingExtra="1dp"
            android:text="What are you looking for in a job ( Including potential companies you want to apply to )"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/experiencesInput" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:lineSpacingExtra="1dp"
            android:text="What is your desired salary range in the format: $50,000 - $100,000"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jobWishesInput" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="How would you like your interviewer to be?"
            android:textColor="#FFFFFF"
            android:lineSpacingExtra="1dp"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.401"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desiredSalaryRangeInput" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_light"
            android:text="Optional: For more specificity, please copy the  text from your resume to provide more context"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/niceButton" />

        <EditText
            android:id="@+id/experiencesInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:textCursorDrawable="@color/black"
            android:maxLines="4"
            android:text="As of right now, I am currently out of a job and looking for new opportunities to further develop my skills and contribute to a team. During my past five years of experience as a software engineer, I have developed a solid foundation of technical skills and experience in developing and maintaining web applications, building scalable systems, and working collaboratively with cross-functional teams. I have gained expertise in programming languages such as Python, Java, and JavaScript, and have also developed skills in database management and API development"
            android:fontFamily="@font/poppins_light"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:paddingBottom="10sp"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/jobWishesInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingRight="10sp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:textCursorDrawable="@color/black"
            android:ems="10"
            android:text="I am currently searching for a challenging role that will allow me to build upon my existing skill set while providing opportunities for professional growth. I am specifically interested in companies that prioritize innovation, collaboration, and a positive work culture. Additionally, I am interested in exploring cutting-edge technologies such as AI, machine learning, and blockchain. "
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/desiredSalaryRangeInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:textCursorDrawable="@color/black"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:paddingRight="10sp"
            android:scrollHorizontally="false"
            android:text="As for my desired salary range, I am looking for a range between $80,000 to $100,000 per year, depending on the specifics of the role and the company."
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="11sp"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/resumeInput"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:paddingTop="10sp"
            android:paddingRight="10sp"
            android:text="5 years of experience as a software engineer. Proficient in Python, Java, and JavaScript. Experience with database management and API development Strong collaboration and communication skills Comfortable working in a team-oriented environment. Passionate about learning new technologies and programming languages"
            android:textCursorDrawable="@color/black"
            android:paddingBottom="10sp"
            android:fontFamily="@font/poppins_light"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.383"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/criticalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4D4D4D"
            android:text="Critical"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startInterviewButton"
            android:layout_width="304dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/poppins"
            android:text="Start Interview"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.364"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resumeInput" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/specificButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4D4D4D"

            android:text="Specific"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/niceButton"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/niceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4D4D4D"
            android:text="Nice"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/criticalButton"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>