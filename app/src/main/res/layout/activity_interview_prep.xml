<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_mode_black"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_mode_black"
        android:paddingBottom="40sp"
        tools:context=".InterviewPrep">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/baloo_bhai_2_medium_added"
            android:text="Welcome!"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:text="Letâ€™s start your interview, please enter your information"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:text="Please describe your experiences  ( Including years of experience,  tools used, and so on ) ( Note: can also be used as a LinkedIn profile  intro )"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:text="What are you looking for in a job ( Including potential companies you want to apply to )"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.401"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:text="What is your desired salary range in the format: $50,000 - $100,000"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.401"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:text="How would you like your interviewer to be?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.401"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:text="Optional: For more specificity, please copy the  text from your resume to provide more context"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:textCursorDrawable="@color/black"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:textCursorDrawable="@color/black"
            android:ems="10"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:textCursorDrawable="@color/black"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.387"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:autofillHints="name"
            android:background="@drawable/rounded_corners_edit_text"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/baloo_bhai_2_regular_added"
            android:gravity="start|top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="2000"
            android:maxLines="4"
            android:paddingLeft="10sp"
            android:paddingTop="5sp"
            android:textCursorDrawable="@color/black"
            android:paddingBottom="5sp"
            android:scrollHorizontally="false"
            android:textColor="#494949"
            android:textColorHighlight="#515151"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.383"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4D4D4D"
            android:fontFamily="@font/baloo_bhai_2_medium_added"
            android:text="Critical"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="296dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/baloo_bhai_2_medium_added"
            android:text="Start Interview"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4D4D4D"
            android:fontFamily="@font/baloo_bhai_2_medium_added"
            android:text="Specific"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4D4D4D"
            android:fontFamily="@font/baloo_bhai_2_medium_added"
            android:text="Nice"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>